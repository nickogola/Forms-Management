@model Forms.Features.Home.DeleteStateProgram.Command
@{

}

<div class="card">
    <div class="card-header">
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <form class="form-horizontal" method="post">
            <input asp-for="FormID" type="hidden" />
            <input asp-for="StateProgramID" type="hidden" />
            <input asp-for="RowVersion" type="hidden" />

            <div class="form-group row">
                <div class="col-md-12">
                    <div id="validationSummary" class="alert alert-danger d-none"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">State / Program:</label>
                <div class="col-sm-4">
                    <p class="form-control-plaintext">@Model.StateCode-@Model.ProgramCode</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Effective Date:</label>
                <div class="col-sm-10">
                    <input asp-for="EffectiveDate" asp-format="{0:MM/dd/yyyy}" type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Expiration Date:</label>
                <div class="col-sm-10">
                    <input asp-for="ExpirationDate" asp-format="{0:MM/dd/yyyy}" type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-2 col-md-10">
                    <input type="submit" value="Yes" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="@nameof(Forms.Features.Home.HomeController.Detail)" asp-route-id="@Model.FormID" asp-route-stateprogramid="@Model.StateProgramID">No</a>
                </div>
            </div>
        </form>
    </div>
</div>