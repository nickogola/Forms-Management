@model Forms.Features.Home.Delete.Command

<div class="card">
    <div class="card-header">
        <h4>Are you sure you want to delete this?</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="FormID" type="hidden" />
            <input asp-for="RowVersion" type="hidden" />

            <div class="form-group row">
                <div class="col-md-12">
                    <div id="validationSummary" class="alert alert-danger d-none"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Form Number:</label>
                <div class="col-sm-6">
                    <input asp-for="FormNumber" type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Form Name:</label>
                <div class="col-sm-6">
                    <input asp-for="FormName" type="text" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Form Category:</label>
                <div class="col-sm-6">
                    <input asp-for="FormCategoryID" type="text" class="form-control" readonly />
                </div>
            </div>

            <div class="form-group row">
                <div class="offset-2 col-md-10">
                    <input type="submit" value="Yes" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="@nameof(Forms.Features.Home.HomeController.Detail)" asp-route-id="@Model.FormID">No</a>
                </div>
            </div>
        </form>
    </div>
</div>