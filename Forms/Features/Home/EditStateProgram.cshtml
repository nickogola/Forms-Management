@model Forms.Features.Home.EditStateProgram.Command
@{

}

<div class="card">
    <div class="card-header">
        <h3>Edit Page State Program</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input asp-for="FormID" type="hidden" />
            <input asp-for="StateProgramID" type="hidden" />
            <input asp-for="StateCode" type="hidden" />
            <input asp-for="ProgramCode" type="hidden" />
            <input asp-for="RowVersion" type="hidden" />

            <div class="form-group row">
                <div class="col-md-12">
                    <div id="validationSummary" class="alert alert-danger d-none"></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">State / Program:</label>
                <div class="col-sm-4">
                    <p class="form-control-static">@Model.StateCode-@Model.ProgramCode</p>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Lines Of Business:</label>
                <div class="col-sm-10">
                    <select asp-for="LineOfBusinessIDs" asp-items="Model.LinesOfBusiness" class="form-control filter"  multiple="multiple">
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Effective Date:</label>
                <div class="col-sm-10">
                    <input asp-for="EffectiveDate" asp-format="{0:MM/dd/yyyy}" type="text" class="form-control datepicker" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Expiration Date:</label>
                <div class="col-sm-10">
                    <input asp-for="ExpirationDate" asp-format="{0:MM/dd/yyyy}" type="text" class="form-control datepicker" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2">Form Types:</label>
                <div class="col-sm-6">
                    <select asp-for="FormTypeID" asp-items="Model.FormTypes" class="form-control">
                        <option value=""></option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="spacing">
    <a class="btn btn-success" asp-action="@nameof(Forms.Features.Home.HomeController.Detail)" asp-route-id="@Model.FormID">Back</a>
</div>


@section Scripts {
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/pikaday/pikaday.js"></script>
    <script src="~/lib/pikaday/plugins/pikaday.jquery.js"></script>

    <script type="text/javascript">
        $('.datepicker').pikaday({
            format: 'MM/DD/YYYY'
        });
    </script>
}
